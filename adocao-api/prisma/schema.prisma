generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  descricao String?
  email     String   @unique
  senha     String
  criacao   DateTime
  estado    STATUS
  recuperacoes Recuperacao[] 

  @@map("usuarios")
}

enum STATUS {
  ATIVO
  ANALISE
  SUSPENSO
  BANIDO
}

model Recuperacao {
  id String @id @default(uuid())
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String
  token String?
  criacao DateTime @default(now())

  @@map("recuperacoes")
}


//--Meus Modelos Prisma-- Antonio
// Modelo para as fotos
model Foto {
  id         Int      @id @default(autoincrement())
  url        String?
  animalId   Int
  animal     Animal   @relation(fields: [animalId], references: [id])

  @@map("fotos")
}
// Modelo para o animal
model Animal {
  id                     Int  @id @default(autoincrement())
  id_dono                Int?  //Esse field aqui tem que ser ligado com o BD de Amadeu, ja que ele ta fazendo o login do usuario
  nome                   String   
  raca                   String
  genero                 String?
  idade                  Int?
  personalidade          String?
  necessidadesMedicas    String?
  necessidadesComportamentais String?
  fotos                  Foto[]

  @@map("animais")
}

