generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  descricao String?
  email     String   @unique
  senha     String
  criacao   DateTime
  estado    STATUS
  recuperacoes Recuperacao[] 

  @@map("usuarios")
}

enum STATUS {
  ATIVO
  ANALISE
  SUSPENSO
  BANIDO
}

model Recuperacao {
  id String @id @default(uuid())
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String
  token String?
  criacao DateTime @default(now())

  @@map("recuperacoes")
}


