generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            String        @id @default(uuid())
  nome          String
  nomeDeUsuario String        @unique
  descricao     String?
  email         String        @unique
  senha         String
  criacao       DateTime
  estado        STATUS
  recuperacoes  Recuperacao[]

  @@map("usuarios")
}

model Recuperacao {
  id        String   @id @default(uuid())
  usuarioId String
  token     String?
  criacao   DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("recuperacoes")
}

enum STATUS {
  ATIVO
  ANALISE
  SUSPENSO
  BANIDO
}

